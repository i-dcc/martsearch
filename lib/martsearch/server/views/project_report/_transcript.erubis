<!-- Display the exon details -->
<table width="100%" style="margin-bottom:5px;">
  <thead>
    <th>Ensembl Exon ID</th>
    <th>WildType</th>
    <th>Floxed</th>
  </thead>
  <tbody>
    <% transcript[:exons].each do |exon| %>
      <tr>
        <td><%= exon[:ensembl_stable_id] %></td>
        <td><%= exon[:structure] %></td>
        <!-- this can surely be written better -->
        <td bgcolor="<%= case exon[:description]
        when 'upstream', 'downstream' then '#00FF00'
        when 'deleted'                then '#FF0000'
        when 'frameshift'             then '#FF8040'
        end %>"
        ><%= exon.include?(:floxed_structure) ? exon[:floxed_structure] : "D" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
